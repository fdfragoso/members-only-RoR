<div class="column is-half">
<% if user_signed_in? %>
  <article class="media box">
     <figure class="media-left">
        <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name)%>
        </p>
     </figure>
     <div class="media-content">
       <%= render 'form' %>
     </div>
  </article>
<% end %>
<% @posts.each do |tweet| %>
 <div class="box">
   <article class="media">
     <div class="media-left">
       <figure class="image is_64x64">
       <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name)%>
       </figure>
     </div>
     <div class="media-content">
       <div class="content">
          <strong><%= tweet.user.name %></strong><br>
          <small>@<%= tweet.user.username %></small><br>
          <p>
            <%= tweet.body %>
          </p>
       </div>
       <% if user_signed_in? %>
       <nav class="level">
        <div class="level-left is-mobile">
        <%= link_to tweet, class: 'level-item' do %>
            <span class="icon"> <i class="fas fa-link" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to edit_post_path(tweet), class: 'level-item' do %>
            <span class="icon"> <i class="fas fa-pencil-alt"></i></span>
        <% end %>
        <%= link_to tweet, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} do %>
            <span class="icon"> <i class="fas fa-trash-alt"></i></span>
        <% end %>
        </div>
     </nav>
     <% end %>
     </div>
   </article>
 </div>
<% end %>
</div>